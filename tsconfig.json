{
	"compilerOptions": {
		"target": "ESNext",
		"esModuleInterop": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "nodenext",
		"outDir": "dist",
		"module": "NodeNext",
		"allowJs": true,
		"strict": false,
		"isolatedModules": true
	},
	"include": ["src", "test"],
	"exclude": ["node_modules"]
}
